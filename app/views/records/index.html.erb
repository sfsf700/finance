<div>
  <%= month_calendar do |date| %>
    <%= date %>
  <% end %> 

  <div class="wrap-new">
    <div class="finance-total">
    
      <div class="d-flex">
        <div class="fs-2 ceb fw-bold">収入</div>
        <div class="fs-2 price"><%= @select_income.to_s(:delimited) %>円</div>
      </div>
      <div class="d-flex">
        <div class="fs-2 ceb fw-bold">支出</div>
        <div class="fs-2 price"><%= @select_spending.to_s(:delimited) %>円</div>
      </div>
 
    </div>
  </div>
</div>

<div class="finance-index">
  <% @records.each do |record| %>
    <% if record.status == 1 %>
      <div class="d-flex border-bottom pt-5">
        <div class="f-date fs-1"><%= record.r_date.strftime('%m月%d日') %></div>
        <div class="f-date f-category fs-1"><%= record.genre.g_name%></div>
        <div class="f-price fs-1"><%= record.price.to_s(:delimited) %></div>
      </div>
    <% else %>
      <div class="d-flex border-bottom pt-5">
        <div class="f-date fs-1"><%= record.r_date.strftime('%m月%d日') %></div>
        <div class="f-date f-category fs-1"><%= record.genre.g_name%></div>
        <div class="f-price fs-1 spending-status">-<%= record.price.to_s(:delimited) %></div>
      </div>
    <% end %>
  <% end %>
</div>

<%= render "shared/footer" %>