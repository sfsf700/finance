<header class="top">
  <div class="site-header">
    <div class="site-title"><%= image_tag "mocha_finance.png", class: "mocha_finance" %></div>
    <div class="login-btn"><%= link_to 'ログインはこちら', user_session_path, class: "my-finance-user" %></div>
  </div>
</header>
<div>
  <div class="page-header">
    <div class="logo"><%= image_tag "f_logo.png", class: "app_logo" %></div>
    <div class="create-account">
      <h2 class="fs-60">Create Account</h2>
    </div>
  </div>

  <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :name, class:"form-label" %><br />
      <%= f.text_field :name , class:"form-control" , maxlength: "20", placeholder: "例) mocha (20文字以内)" %>
    </div>
    <div class="field">
      <%= f.label :email, class:"form-label" %><br />
      <%= f.email_field :email, class:"form-control", placeholder: "例) mocha@test.com "%>
    </div>
    <div class="field">
      <%= f.label :"Password(半角英字、半角数字を各1文字以上必要です)", class:"form-label" %><br />
      <%= f.password_field :password, class:"form-control", autocomplete: "off" %>
    </div>
    <div class="field">
      <%= f.label :"Password(確認)", class:"form-label" %><br />
      <%= f.password_field :password_confirmation, class:"form-control", autocomplete: "off" %>
    </div>
    <div>
      <%= f.submit "Sign up", class:"user-login" %>
    </div>
  <% end %>
</div>
<%= content_for(:title, "新規会員登録") %>