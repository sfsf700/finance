<header class="top">
  <div class="site-header">
    <div class="site-title">俺の家計簿</div>
  </div>
</header>
<nav class="menu-wrap">
  <ul class="nav-wrap">
    <li class="nav-item">
      <a class="nav-link" href="/" data-turbolinks= false><i class="fa-solid fa-pen"><br>入力</i></a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/records"><i class="fa-solid fa-calendar"><br>カレンダー</i></a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/chart" data-turbolinks= false><i class="fa-solid fa-database"><br>円グラフ</i></a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/setting"><i class="fa-solid fa-gear"><br>設定</i></a>
    </li>
  </ul>
</nav>



<div class="category-page">

  <div class="category-page-left">
    <div class="new-category-head">
      <div class="new-category">カテゴリー登録</div>
    </div>
    <%= form_with model: @genre, loclal: true do |f| %>
      <div class="wrap-form-contents ">
        <div class="category-form">
          <label for="formGroup" class="form-label">カテゴリーの名前を入力</label>
          <%= f.text_field :g_name, class: "form-control", id: "formGroup", placeholder: "例) 俺の食費" %>
        </div>
      </div>
      <div class="wrap-form-submit">
        <input class="register-btn" type="submit" value="保存">
      </div>
    <% end %>
  </div>

  <div class="category-page-right">
    <div class="new-category-head">
      <div class="new-category">カテゴリー登録</div>
    </div>
    <div class="chart-contents">
      <% @genres.each do |genre| %>
        <div class="record-content">
          <div><%= genre.g_name %></div>
          <div id="alert">
            <%= link_to genre_path(genre.id), method: :delete ,  data: { confirm: "削除してよろしいですか?" } do %>
              <i class="fa-regular fa-trash-can"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>