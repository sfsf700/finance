<%= render "shared/header" %>

<div class="category-page">

  <div class="category-page-left media-pc">
    <div class="new-category-head">
      <div class="new-category">カテゴリー追加</div>
    </div>
    <%= form_with model: @genre, loclal: true do |f| %>
    
      <div class="wrap-form-contents ">
        <div class="category-form">
          <div class="change-btn">
            <%= f.label :form_spending, '支出', class:"spending-btn", value:1, id: "spendingButton" %>
            <%= f.label :form_income, '収入',class:"income-btn", value:2, id: "incomeButton" %>
            <%= f.hidden_field :status, value: @genre.status, name: "genre[status]",  id: "status-form"%>
          </div>
          <label for="formGroup" class="form-label">カテゴリーの名前を入力</label>
          <%= f.text_field :g_name, class: "form-control", id: "formGroup", placeholder: "例) 俺の食費" %>
        </div>
      </div>
      <div class="wrap-form-submit">
        <%= f.submit "保存", class:"register-btn" %>
      </div>
    <% end %>
  </div>

  <div class="category-page-right media-pc">
    <div class="new-category-head">
      <div class="new-category">カテゴリー一覧</div>
    </div>
    <div class="chart-contents">
      <% @genres.each do |genre| %>
        <div class="record-content">
          <div><%= genre.g_name %></div>
          <div id="alert">
            <%= link_to genre_path(genre.id), method: :delete ,  data: { confirm: "関連するデータが全て消えるぞ。本当にいいのか?" } do %>
              <i class="fa-regular fa-trash-can"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>



  <div class="category-page-right media-smart">
    <div class="new-category-head">
      <div class="new-category">カテゴリー一覧</div>
    </div>
    <div class="chart-contents">
      <% @genres.each do |genre| %>
        <div class="record-content">
          <div><%= genre.g_name %></div>
          <div id="alert">
            <%= link_to genre_path(genre.id), method: :delete ,  data: { confirm: "関連するデータが全て消えるぞ。本当にいいのか?" } do %>
              <i class="fa-regular fa-trash-can"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="category-page-left media-smart">
    <div class="new-category-head">
      <div class="new-category-add">カテゴリー追加</div>
    </div>
    <%= form_with model: @genre, loclal: true do |f| %>
    
      <div class="wrap-form-contents ">
        <div class="category-form">
          <label for="formGroup" class="form-label">カテゴリーの名前を入力</label>
          <%= f.text_field :g_name, class: "form-control", id: "formGroup", placeholder: "例) 俺の食費" %>
        </div>
      </div>
      <div class="wrap-form-submit">
        <%= f.submit "保存", class:"register-btn" %>
      </div>
    <% end %>
  </div>

</div>
<%= content_for(:title, "カテゴリー編集") %>